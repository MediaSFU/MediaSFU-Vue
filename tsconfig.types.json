{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "ignoreDeprecations": "5.0",

    /* Module Resolution */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    /* Base URL for path resolution */
    "baseUrl": ".",
    "paths": {
      "@legacy": ["src/react-legacy/src"],
      "@legacy/*": ["src/react-legacy/src/*"]
    }
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/App.vue",
    "src/main.ts",
    "node_modules",
    "dist"
  ]
}
